{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true,
        "lib": [
            "es2018",
            "es2019",
            "es2020"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "allowJs": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}